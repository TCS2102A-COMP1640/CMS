{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"esModuleInterop": true,
		"experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"noImplicitAny": true,
		"noUnusedLocals": true
	},
	"include": ["src/**/*"]
}
