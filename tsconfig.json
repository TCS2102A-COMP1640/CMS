{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@app/*": ["src/*"],
			"*": ["node_modules/*"]
		},
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"plugins": [{ "transform": "typescript-transform-paths", "exclude": ["**/node_modules/**"] }]
	},
	"include": ["src/**/*"],
	"exclude": ["src/interfaces"]
}
